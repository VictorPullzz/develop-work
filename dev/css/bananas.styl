/*** Settings ***/
@import "nib"
@import "../lib/css/css"

global-reset();
reset-html5();
form-reset();
b
strong
i
em
	font-style normal
	font-weight normal

$transitionAnimation = cubic-bezier(0.250, 0.460, 0.450, 0.940)
$colorMain = #2D2A26
$colorYellow = #FFED00

/* fonts */
@font-face
	font-family "ProximaNovaRegular"
	src url("../fonts/ProximaNova-Regular.woff") format("woff")

@font-face
	font-family "ProximaNovaBold"
	src url("../fonts/ProximaNova-Bold.woff") format("woff")

@font-face
	font-family "ProximaNovaLight"
	src url("../fonts/ProximaNova-Light.woff") format("woff")

@font-face
	font-family "ProximaNovaSemibold"
	src url("../fonts/ProximaNova-Semibold.woff") format("woff")
/* //fonts */

/** page style **/
html
	min-height 100%

body
	position relative
	width 100%
	min-height 100%
	line-height 1
	cursor default
	font-family "ProximaNovaRegular"
	font-size 14px
	color #2D2A26

	&.fixed-logo
		.page-header
			.header-logo
				transform translateY(12px)

		.header-holder
			&:before
				left -250px
				width 500px

.preloader
	position fixed
	top 0
	right 0
	left 0
	bottom 0
	width 100%
	height 100%
	z-index 111111
	background #fff
	transition: all 2s $transitionAnimation

	.preloader-bcg
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		display block
		width 100%
		height 100%
		background #2d2a26
		transform translateY(100%)
		opacity 0
		transition all 1.5s $transitionAnimation

	.preloader-img
		position absolute
		top 50%
		left 50%
		display block
		max-width 100px
		width 100%
		margin-left -107.5px
		margin-top -43px
		opacity 0
		transition all 1s $transitionAnimation

.preloader
	&.active
		.preloader-bcg
			opacity 1
			transform translateY(0%)

		.preloader-img
			opacity 1
	&.hide
		background transparent

		.preloader-bcg
			transform translateY(-100%)

		.preloader-img
			opacity 0

.page
	display block
	width 100%

	min-height 100vh

	margin 0 auto

.page-inner
	position relative
	display block
	margin 0 auto
	box-sizing border-box

	&--w0
		max-width 100%
		width 100%
		padding 0 20px

	&--w1
		max-width 1185px
		width 100%
		padding 0 20px

	&--w2
		max-width 1025px
		width 100%
		padding 0 20px

	&--w3
		max-width 795px
		width 100%
		padding 0 20px

.page-header
	position fixed
	top 0
	left 0
	right 0
	display block
	width 100%
	height 80px
	z-index 1000

	.header-burger-holder
		position relative
		display none
		width 35px
		height 20px
		margin-right 30px
		cursor pointer
		transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

		.header-burger
			position absolute
			top 50%
			display block
			width 100%
			height 2px
			background $colorYellow
			transform translateY(-50%)
			transition width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), opacity 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

		&:before
		&:after
			content ""
			position absolute
			top 0
			left 0
			display block
			width 100%
			height 2px
			background $colorYellow
			transition transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94), width 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94)

		&:after
			top initial
			bottom 0

		&.active
			transform rotate(180deg)

			.header-burger
				display none

			&:before
				width 100%
				transform rotate(30deg) translateX(5px) translateY(8px)

			&:after
				width 100%
				transform: rotate(-30deg) translateX(5px) translateY(-7px)


	.header-row
		display block
		height 100%
		padding-left 150px
		box-sizing border-box
		overflow hidden

	.header-holder
		position relative
		display flex
		align-items center
		justify-content flex-end

		width 100%
		height 100%

		background $colorMain

		&:before
			content ""
			position absolute
			top 0
			left -25px
			bottom 0
			display block
			width 80px
			height 80px
			transform skewX(30deg)

			background $colorMain

			transition width 0.8s $transitionAnimation, left 0.8s $transitionAnimation


	.header-logo
		position absolute
		top 0
		left 50px
		display block
		max-width 45px
		width 100%

		transform translateY(80px)
		transition transform 0.8s $transitionAnimation
		z-index 100

		svg
			display block
			width 100%

	.header-menu
		max-width 70%
		margin-right 50px
		width 100%
		height 100%

	.header-portal
		max-width 195px
		width 100%
		margin-right 20px

	.header-menu-inner
		display flex
		align-items center
		justify-content flex-end
		height 100%

		.header-menu-item-holder
			position relative
			display block
			height 100%

			padding 0 20px
			box-sizing border-box
			margin-left -0.7px
			text-align center

			transform skewX(30deg)
			overflow hidden

			&:before
				content ""
				position absolute
				top 0
				right 0
				bottom 0
				left -100%

				display block
				width 100%
				height 100%
				background $colorYellow
				transition left 0.3s $transitionAnimation

			&:hover
				color $colorMain

				.header-menu-item
					color $colorMain

				&:before
					left 0

			&.active
				&:before
					left 0

				.header-menu-item
					color $colorMain

		.header-menu-item
			display flex
			align-items center
			height 100%
			text-transform uppercase
			letter-spacing 2px
			font-family "ProximaNovaBold"
			white-space nowrap
			transform skewX(-30deg)

			transition color 0.3s $transitionAnimation

.page-footer
	display block
	padding 35px 60px

	background $colorMain

	.footer-col
		min-width 190px

	.footer-row
		display flex
		align-items flex-start
		justify-content space-between
		flex-wrap wrap

		margin-bottom 30px

		&:last-child
			margin-bottom 0

	.footer-address
		display inline-block
		vertical-align top
		max-width 185px
		margin-right 55px
		line-height 30px
		font-size 16px
		letter-spacing 1px
		text-transform uppercase
		color #FFFFFF

	.footer-phone
		display inline-block
		vertical-align top
		line-height 34px
		font-size 16px
		letter-spacing: 1px
		text-transform: uppercase

	.footer-title
		font-size 16px
		letter-spacing: 1px
		text-transform: uppercase
		color #FFFFFF

	.footer-info
		display flex
		align-items center
		justify-content flex-start

		.footer-info-item
			width auto
			margin-right 30px

			&:last-child
				margin-right 0

		.footer-license
			width 100%
			color #fff
			opacity 0.5
			white-space nowrap

	.footer-social
		width 100%
		margin-left 10px

		.footer-title
			text-align left
			margin-left -10px

	.footer-social-list
		display flex
		justify-content flex-start
		align-items center

		margin-top 25px

		transform skewX(30deg)

		.footer-social-item
			display flex
			align-items center
			justify-content center


			width 35px
			height 30px
			margin-right 30px
			background $colorYellow

			transition background 0.3s $transitionAnimation

			&:last-child
				margin-right 0

			svg
				display block
				width 50%
				max-height 17px

				transform skewX(-30deg)

				path
					transition fill 0.3s $transitionAnimation

			&:hover
				background #fff

				svg
					path
						fill $colorMain


/* link button */
.link
	letter-spacing 0.5px
	text-decoration none
	color #000

.link-black
	color $colorMain

.link-white
	color #fff

.link-yellow
	color $colorYellow

.link-white--yellow
	transition color 0.3s $transitionAnimation

	&:hover
		color $colorYellow

.link-opacity
	transition opacity 0.3s $transitionAnimation

	&:hover
		opacity 0.5

.link-yellow--white-bottom
	position relative
	display inline

	transition color 0.3s $transitionAnimation

	&:after
		content ""
		position absolute
		top 100%
		left 0
		width 100%
		height 1px
		background $colorYellow

		opacity 0

		transform translateY(5px)

		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&:hover
		&:after
			opacity 1
			transform translateY(3px)

.btn
	position relative
	display block
	letter-spacing 2px
	font-size 14px
	font-family "ProximaNovaBold"
	text-transform uppercase
	text-align center
	text-decoration none
	white-space nowrap

	&-yellow
		padding 17px 0
		box-sizing border-box

		background transparent

		border 1px solid $colorYellow

		transform skewX(30deg)

		overflow hidden

		color $colorYellow

		transition color 0.3s $transitionAnimation

		&>span
			display inline-block
			font-size 14px
			transform skewX(-30deg)

		&:before
			content ""
			position absolute
			top 0
			right 0
			bottom 0
			left -100%

			display block
			width 100%
			height 100%
			background $colorYellow

			transition left 0.3s $transitionAnimation

		&:hover
			color $colorMain

			&:before
				left 0

	&-black
		padding 12px 0
		box-sizing border-box

		background transparent

		border 1px solid $colorMain

		transform skewX(30deg)

		overflow hidden

		background $colorMain

		color #fff

		transition color 0.3s $transitionAnimation, background 0.3s $transitionAnimation

		&>span
			display inline-block
			font-size 14px
			transform skewX(-30deg)

		&:before
			content ""
			position absolute
			top 0
			right 0
			bottom 0
			left -100%

			display block
			width 100%
			height 100%
			background $colorYellow

			transition left 0.3s $transitionAnimation

		&:hover
			color $colorMain

			&:before
				left 0

/* //link button */


/*** main style ***/
.noskew
	transform skewX(-30deg)

.center
	text-align center

.section-page
	padding-top 140px
	padding-bottom 140px

	&.section
		.section-title
			margin 0 auto 60px auto

.section-title
	position relative

	display inline-block
	margin 0 auto 20px auto

	letter-spacing 1px

	font-style italic
	font-family "ProximaNovaBold"
	font-size 56px

	text-transform uppercase
	text-align center

	color $colorMain

	&:before
		content ""
		position absolute
		top 0

		display
		width 8px
		height 60px

		background $colorYellow
		transform skewX(30deg)

		z-index -1

.section
	margin-bottom 85px
	.section-title
		margin 0 auto 20px auto

	.section-subtitle
		margin-bottom 40px
		line-height 30px
		font-size 17px
		text-align center

.intro
	position relative

	.intro-scroll
		position absolute
		bottom 25px
		right 25px
		padding-top 40px
		writing-mode tb-rl
		transform rotate(180deg)
		font-size 14px
		color #fff

		cursor pointer

		z-index 200

		&:before
			content ""
			display block
			width 1px
			height 20px

			margin-top -30px
			margin-left -8px

			background #fff

	.intro-slider
		position relative
		min-height 100vh

		.intro-slider-item
			position relative
			height 100vh


		.intro-slider-img
			display block
			width 100%
			height 100%

			object-fit cover

		.intro-slider-text
			position absolute
			top 55%
			left 50%
			transform translate(-50%,-50%)
			text-align center

			z-index 100

			.intro-slider-title
				line-height 85px

				font-family "ProximaNovaBold"
				font-style italic
				font-size 64px

				text-transform uppercase

				color #FFFFFF

			.intro-slider-subtitle
				line-height 34px

				font-family "ProximaNovaLight"
				font-size 18px
				text-align center
				color #FFFFFF

		ul.slick-dots
			position absolute
			left 30px
			bottom 30px

			li
				display inline-block
				width 45px
				height 5px
				margin-right 15px

				background #fff

				transform skewX(30deg)

				transition background 0.3s $transitionAnimation

				&.slick-active
					background $colorYellow

				button
					display block
					width 100%
					height 100%
					font-size 0

.services
	position relative

	.services-clearfix
		display block
		clearfix();

	.services-list
		display grid
		grid-template-columns repeat(3, 1fr)
		grid-gap 20px

		position relative
		width 100%

		transform skewX(30deg)

	.services-item
		position relative

		display block
		min-height 212px

		padding 25px
		box-sizing border-box

		background $colorMain

		&:nth-child(3n)
			margin-right 0

		&:not(.services-item--yellow)
			&:before
				content ""
				position absolute
				top 0
				right 0
				left 0
				bottom 0

				display block
				width 100%
				height 100%

				background rgba(111, 111, 111, 0.85)
				opacity 0
				transform scale(0.8)

				transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

				z-index 10

			.services-holder
				svg
					fill #2d2a26
					path
						fill #ffed00

		.services-name
			margin-bottom 20px

			letter-spacing 1px

			font-style italic
			font-family "ProximaNovaBold"
			font-size 16px

			line-height 20px

			text-transform uppercase

			color #fff

		.services-holder
			width 55px
			height 55px
			margin 0 auto 25px auto

			svg
				display block
				width 100%

		.services-text
			font-family "ProximaNovaLight"
			font-size 12px
			color #fff

		.services-more
			transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation

			&.hide
				position absolute
				top 50%
				left 20px
				right 20px

				display block

				opacity 0
				transform skewX(-30deg) translateY(10px)

				z-index 20

		.services-link
			position relative
			padding 13px 0
			font-family "ProximaNovaRegular"

			.services-link-text
				position relative

				&:after
					content ""
					position absolute
					right -25px
					top 50%
					margin-top -7px
					display block
					width 15px
					height 14px

					background-image url("../svg/arrow_right-white.svg")
					background-size contain
					background-repeat no-repeat

					transition transform 0.3s $transitionAnimation

			&.btn-yellow
				.services-link-text
					&:after
						background-image url("../svg/arrow_right-yellow.svg")

			&:hover
				.services-link-text
					&:after
						background-image url("../svg/arrow_right-black.svg")

		&.services-item-link
			position relative

			&:after
				content ""
				position absolute
				top 50%
				left 50%

				display block
				width 50px
				height 50px

				margin-top -25px
				margin-left -25px

				background-image url("../svg/services_more.svg")
				background-size contain
				background-repeat no-repeat

				transform skewX(-30deg)

				transition transform 0.3s $transitionAnimation

				z-index 25

			&:hover
				&:after
					transform skewX(-30deg) scale(1.1)
		&:hover
			&:not(.services-item-yellow)
				&:before
					opacity 1
					transform scale(1)

			.services-more
				opacity 1
				transform skewX(-30deg) translateY(0)

		&--yellow
			background $colorYellow

			.services-name
				color $colorMain

			.services-text
				color $colorMain


	&--full
		.services-list
			grid-template-columns repeat(4, 1fr)


.cases-list
	display grid
	grid-template-columns repeat(4, 1fr)
	grid-template-columns repeat(4, 1fr)
	grid-gap 20px
	overflow hidden

	.cases-item
		position relative

		&--w50
			grid-column-start span 2
			grid-row-start span 2

		&:before
			content ""
			display block
			padding-top 75%

		.cases-item-info
			position absolute
			top 0
			left 0

			display flex
			align-items center
			justify-content center
			flex-flow column

			padding 0 70px
			box-sizing border-box

			width 100%
			height 100%

			z-index 20

		.cases-logo
			display block
			max-width 100px
			width 100%
			margin 0 auto 40px auto

			svg
				display block
				width 100%

		.cases-title
			margin-bottom 20px
			font-family "ProximaNovaBold"
			font-size 24px
			text-align center
			text-transform uppercase

		.cases-brand
			margin-bottom 20px
			font-family "ProximaNovaLight"
			font-size 16px
			text-align center
			text-transform uppercase

		.cases-text
			margin-bottom 30px
			line-height 22px
			font-family "ProximaNovaLight"
			font-size 16px
			text-align center

		.cases-img
			position absolute
			top 0
			left 0

			display block
			width 100%
			height 100%

			object-fit cover
			object-position center

			z-index 10

		.cases-more
			text-align center

			.cases-link
				position relative
				max-width 190px
				width auto
				margin 0 auto

				padding 13px 50px 13px 30px

				&:after
					content ""
					position absolute
					right 25px
					top 50%
					margin-top -7px
					display block
					width 15px
					height 14px

					background-image url("../svg/arrow_right-white.svg")
					background-size contain
					background-repeat no-repeat

					transform skewX(-30deg)

					transition transform 0.3s $transitionAnimation

				&:hover
					&:after
						background-image url("../svg/arrow_right-black.svg")
		&:after
			content ""
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			display block
			width 100%
			height 100%
			background rgba(255, 237, 0, 0.8)
			opacity 0
			transform skewX(30deg)
			transition opacity 0.3s $transitionAnimation, transform 0.3s $transitionAnimation
			z-index 15

		&:hover
			&:after
				opacity 1
				transform skewX(0)

		&.cases-item--more
			display flex
			align-items center
			justify-content center
			background $colorMain

			&:after
				content none

			.cases-more
				.cases-link
					max-width 210px

					padding 13px 80px 13px 30px

					border none

					.cases-link-text
						font-size 18px
						color $colorYellow
						transition color 0.3s $transitionAnimation
					&:after
						width 17px
						height 17px
						background-image url("../svg/arrow_right-yellow.svg")

					&:hover
						.cases-link-text
							color $colorMain
						&:after
							background-image url("../svg/arrow_right-black.svg")
		&--yellow
			&:after
				content ""
				position absolute
				top 0
				left 0
				right 0
				bottom 0
				display block
				width 100%
				height 100%
				opacity 1
				transform skewX(0)
				background rgba(255, 237, 0, 0.8)

				z-index 15

.clients-list
	display flex
	align-items flex-start
	justify-content flex-start
	flex-wrap wrap

	.clients-item
		max-width 18%
		width 100%
		height 160px
		margin-right 2%

		&:last-child
		&:nth-child(5n)
			margin-right 0

	.clients-holder
		display flex
		align-items center
		justify-content center

		width 100%
		height 100%

	.clients-img
		display block
		max-width 50%
		max-height 50px

.director
	.director-holder
		width 100px
		height 100px
		margin 0 auto 25px auto

		img
			display block
			width 100%
			height 100%
			border-radius 2px
			object-fit cover

	.director-name
		font-style italic
		font-size 18px

	.director-position
		margin-bottom 30px
		line-height 26px
		font-style italic
		font-size 14px

	.director-quote
		position relative
		line-height 52px
		font-size 28px

		&:after
			content ""
			position absolute
			top 50%
			left 50%

			display block
			max-width 150px
			width 100%
			height 120%

			background-image url("../svg/decoration.svg")
			background-repeat no-repeat
			background-position center
			background-size contain

			transform translate(-50%, -50%)

			z-index -1

.comeback
	padding 70px 0
	background $colorYellow

	.comeback-title
		margin-bottom 40px
		line-height 72px
		font-size 56px
		font-family "ProximaNovaBold"
		font-style italic

		text-transform uppercase

	.comeback-more
		text-align center

		.comeback-link
			position relative
			max-width 240px
			width auto
			margin 0 auto

			padding 22px 85px 22px 55px
			font-size 14px

			&:after
				content ""
				position absolute
				right 55px
				top 50%
				margin-top -7px
				display block
				width 15px
				height 14px

				background-image url("../svg/arrow_right-white.svg")
				background-size contain
				background-repeat no-repeat

				transform skewX(-30deg)

				transition transform 0.3s $transitionAnimation

			&:hover
				&:after
					background-image url("../svg/arrow_right-black.svg")




/*** //main style ***/


/** mfp **/
.mfp-bg
	&.mfp-services
		background #fff

		opacity 0
		transform scale(0.95)

		transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

	&.mfp-ready
		opacity 1

		transform scale(1)

	&.mfp-removing
		transform scale(0.95)
		background #fff

.mfp-wrap
	&.mfp-services
		.mfp-container
			padding 0

		.mfp-content
			min-height 100vh
			padding 85px 0
			box-sizing border-box

			opacity 0

			transform translateY(-50px)

			overflow-x hidden

			transition transform 0.3s $transitionAnimation, opacity 0.3s $transitionAnimation

			.services--full
				position relative
				max-width 1310px
				margin 0 auto

			.section-title
				margin-bottom 60px

			.btn-container-close
				top -55px
				right 20px
				display flex
				align-items center
				justify-content center
				width 35px
				height 30px
				background $colorMain
				opacity 1
				transition background 0.3s $transitionAnimation
				transform skewX(30deg)

				svg
					display block
					width 12px
					height 12px

					transform skewX(-30deg)

					path
						stroke #fff
						fill #fff
						transition stroke 0.3s $transitionAnimation
				&:hover
					background $colorYellow
					svg
						path
							stroke $colorMain

		&.mfp-ready
			.mfp-content
				opacity 1
				transform translateY(0)

		&.mfp-removing
			.mfp-content
				opacity 0
				transform translateY(-50px)
